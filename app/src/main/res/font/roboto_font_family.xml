<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Regular -->
    <font
        android:fontStyle="normal"
        android:fontWeight="400"
        android:font="@font/roboto_regular"
        app:fontStyle="normal"
        app:fontWeight="400"
        app:font="@font/roboto_regular" />

    <!-- Medium (often used for buttons in Material Design) -->
    <font
        android:fontStyle="normal"
        android:fontWeight="500"
        android:font="@font/roboto_medium"
        app:fontStyle="normal"
        app:fontWeight="500"
        app:font="@font/roboto_medium" />

    <!--SemiBold-->
    <font
        android:fontStyle="normal"
        android:fontWeight="600"
        android:font="@font/roboto_semibold"
        app:fontStyle="normal"
        app:fontWeight="600"
        app:font="@font/roboto_semibold" />

    <!-- Bold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="700"
        android:font="@font/roboto_bold"
        app:fontStyle="normal"
        app:fontWeight="700"
        app:font="@font/roboto_bold" />

    <!-- You can add other styles like italic if needed -->

</font-family>
